<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="menu.RecycleBin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:menu.Models"
    xmlns:viewmodel="clr-namespace:menu.ViewModels"
    Title="RecycleBin"
    x:DataType="viewmodel:MainViewModel">
    <Shell.TitleView>
        <Button
            BackgroundColor="#90C7F0"
            FontAttributes="Bold"
            FontSize="Large"
            Text="Recycle Bin" />
    </Shell.TitleView>

    <Grid
        ColumnSpacing="10"
        RowDefinitions="Auto, 50, Auto, Auto, *"
        RowSpacing="10"
        VerticalOptions="FillAndExpand">

        <VerticalStackLayout BackgroundColor="Black" Grid.Row="0" Margin="0,20,0,0" WidthRequest="300" HeightRequest="300">
            <CollectionView
                ItemsSource="{Binding TrashUserLists}"
                SelectedItems="{Binding SelectedTrashItems}"
                SelectionMode="Multiple">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="10"
                            Padding="10"
                            BorderColor="#cccccc">
                            <StackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Medium"
                                    Text="{Binding Text}"
                                    BackgroundColor="White"
                                    TextColor="White"
                                    />
                                <Label FontSize="Small" Text="{Binding Deadline}" TextColor="White" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <StackLayout Grid.Row="1" Margin="20,20,20,0">
            <Grid>
                <Button Command="{Binding RecoverSelectedListsCommand}" Text="Restore" HorizontalOptions="Start"/>
                <Button Command="{Binding DeleteSelectedListsForeverCommand}" Text="Delete Forever" HorizontalOptions="End" />
            </Grid>
        </StackLayout>
        
    </Grid>
</ContentPage>