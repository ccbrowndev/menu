<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="menu.RecycleBin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:menu.Models"
    xmlns:viewmodel="clr-namespace:menu.ViewModels"
    Title="RecycleBin"
    x:DataType="viewmodel:MainViewModel">
    <Shell.TitleView>
        <Button
            BackgroundColor="#90C7F0"
            FontAttributes="Bold"
            FontSize="Large"
            Text="Recycle Bin" />
    </Shell.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="" />
    </ContentPage.ToolbarItems>


    <Grid
        ColumnSpacing="10"
        RowDefinitions="Auto, 50, Auto, Auto, *"
        RowSpacing="10"
        VerticalOptions="FillAndExpand">

        <Image
            Grid.Row="0"
            Aspect="AspectFill"
            Source="background.svg" />

        <VerticalStackLayout Grid.Row="0">
            <CollectionView
                BackgroundColor="White"
                ItemsSource="{Binding TrashUserLists}"
                MaximumHeightRequest="{Binding ListCollectionHeight}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:UserList">
                        <Grid Padding="10" ColumnDefinitions="*, Auto, Auto">
                            <Label
                                Grid.Column="0"
                                FontSize="Medium"
                                Text="{Binding Name}"
                                VerticalOptions="Center" />
                            <Button
                                Grid.Column="1"
                                Margin="5,0"
                                BackgroundColor="LightGreen"
                                Command="{Binding Path=BindingContext.RecoverListCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="End"
                                Text="Recover" />
                            <Button
                                Grid.Column="2"
                                Margin="5,0"
                                BackgroundColor="LightCoral"
                                Command="{Binding Path=BindingContext.DeleteForeverCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding .}"
                                HorizontalOptions="End"
                                Text="Delete Forever" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout
                Margin="20,20,0,15"
                HeightRequest="45"
                WidthRequest="235">
                <Button
                    BackgroundColor="Navy"
                    Clicked="RecoveredClicked"
                    FontAttributes="Bold"
                    Text="Recover" />
                <Button
                    Margin="45,0,0,0"
                    BackgroundColor="White"
                    Clicked="DeletedClicked"
                    FontAttributes="Bold"
                    Text="Delete"
                    TextColor="Navy" />

            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>