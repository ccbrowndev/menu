<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="menu.RecycleBin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:menu.Models"
    xmlns:viewmodel="clr-namespace:menu.ViewModels"
    Title="RecycleBin"
    x:DataType="viewmodel:MainViewModel">
    <Shell.TitleView>
        <Button
            BackgroundColor="#90C7F0"
            FontAttributes="Bold"
            FontSize="Large"
            Text="Recycle Bin" />
    </Shell.TitleView>

    <Grid
        ColumnSpacing="10"
        RowDefinitions="Auto, 50, Auto, Auto, *"
        RowSpacing="10"
        VerticalOptions="FillAndExpand">

        <StackLayout Padding="0,10,0,0" VerticalOptions="FillAndExpand">

            <CollectionView
                x:Name="UserListCollectionView"
                Grid.Row="2"
                Margin="10,0"
                IsVisible="{Binding IsVisible}"
                ItemsSource="{Binding TrashListCollection}"
                MaximumHeightRequest="{Binding ItemCollectionHeight}"
                SelectedItem="{Binding SelectedTrashList}"
                SelectionMode="Multiple">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type model:UserList}">
                        <Grid
                            Margin="15,0"
                            Padding="0,10,15,0"
                            ColumnDefinitions="Auto, *">
                            <Frame Grid.Column="1">
                                <Label FontSize="18" Text="{Binding Name}" />
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>