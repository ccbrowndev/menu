<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="menu.ListDetails"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ListDetails">
    <ScrollView>
        <StackLayout>

            <Grid Margin="0,25,0,0">
                <Button
                    x:Name="addNewListPage"
                    Margin="0,0,20,20"
                    Clicked="OnAddListButtonClicked"
                    HorizontalOptions="End"
                    Text="+"
                    VerticalOptions="End" />
            </Grid>

            <Label
                Margin="0,10,0,10"
                FontSize="Large"
                Text="Welcome" />

            <!--  pickList  -->

            <Grid Margin="0,25,0,0">
                <Button
                    x:Name="addNewListItemPage"
                    Margin="0,0,20,20"
                    Clicked="OnAddListItemButtonClicked"
                    Text="+"
                    VerticalOptions="End" />
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>